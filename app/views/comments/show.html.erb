<p id="notice"><%= notice %></p>
<div class="mt-3 mb-5">
  <h3 class="text-center big_title">Comment</h3>
      <div class="container">
        <div class="card mx-auto page-background">
          <div class="card-body">
            <div class="row ">
              <div class="col-md-2">
                <i class="fas fa-comment fa-5x ml-5"></i>
              </div>
              <div class="col-md-10">
                <p>From: <%= link_to @comment.event_guest.user.username , @comment.event_guest.user %></p>
                <div class="clearfix"></div>
                <p><%= @comment.message %></p>
              </div>
              <div>
                <button class="comment-create page-background mb-0"><%= link_to "Delete Comment", comment_path(comment) , method: :delete,class: "comment-create mr-1 text-danger"%></button>
              </div>
            </div>
          </div>
        </div>
      </div>
</div>

