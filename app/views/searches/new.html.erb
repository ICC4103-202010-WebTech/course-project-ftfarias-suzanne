<div class="text-center">
  <div class="big-title pt-4">
    <h3 class="big_title">Search Tool</h3>
    <p class="title-para">Type in any keyword to search for users, events or organizations!</p>
  </div>

  <%= form_for @search do |f| %>
    <div class="container pt-4">
      <div class="d-flex justify-content-center h-100">
        <div class="searchbar">
          <%= f.text_field :keywords , class: "search_input", placeholder: "Search..." %>
          <%= button_tag(type: "submit", class: "search_icon") do %>
            <span><i class="fas fa-search"></i></span>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
