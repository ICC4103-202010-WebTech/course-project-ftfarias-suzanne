<p id="notice"><%= notice %></p>


<h3 class="text-center big_title">Inbox</h3>
<% @invitations.each do |invitation| %>
  <div class="container">
    <div class="card mx-auto page-background">
      <div class="card-body">
        <div class="row ">
          <div class="col-md-2">
            <i class="fas fa-envelope fa-5x ml-5"></i>
          </div>
          <div class="col-md-10">
            <p>From: <%=  link_to invitation.event.event_creator.user.user_profile.username , invitation.event.event_creator.user.user_profile %></p>
            <div class="clearfix"></div>
            <p><%= invitation.message %> <%=invitation.event.name %></p>
            <button type="button" class="btn btn-sm btn-outline-secondary float-right">
              <%= link_to "Accept Invitation" , invitation.event%>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>