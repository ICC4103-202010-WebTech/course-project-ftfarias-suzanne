<p id="notice"><%= notice %></p>

<body>

<header>
  <h2>
    Inbox
  </h2>
</header>

<main>
  <table>
    <thead>
    <tr>
      <th>From</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%=  link_to invitation.event.event_creator.user.user_profile.username , invitation.event.event_creator.user.user_profile %></td>
        <td><%= invitation.message %> <%=invitation.event.name %></td>
        <td> <%= link_to "Accept Invitation" , invitation.event%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</main>
</body>