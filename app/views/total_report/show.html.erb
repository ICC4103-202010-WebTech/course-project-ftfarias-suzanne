<div class="mb-5">
  <h3 class="text-center big_title">Event Reports</h3>
  <% if @event_reports.count == 0 %>
    <p class="text-center title-para">There aren't any event reports yet!</p>
  <%else %>

    <% @event_reports.each do |report| %>
      <div class="container">
        <div class="card mx-auto page-background">
          <div class="card-body">
            <div class="row ">
              <div class="col-md-2">
                <i class="fas fa-exclamation-triangle fa-5x ml-5 text-danger"></i>
              </div>
              <div class="col-md-10">
                <p>From: <%= link_to report.user.username , report.user %></p>
                <div class="clearfix"></div>
                <p>Reported event: <%=report.event.name %></p>
                <p><%= report.message %></p>

                <button type="button" class="btn btn-sm btn-outline-secondary float-right">
                  <%= link_to "Go to event", report.event%>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <%end %>
</div>

