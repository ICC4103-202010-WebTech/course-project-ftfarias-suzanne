<h4>Your Upcoming Events</h4>
<!-- TODO: Generate a table contaning the latest five events in the database -->
<table>
  <thead>
  <tr>
    <th>Event</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @upcoming_events.each do |upcoming_event| %>
    <tr>
      <td><%=  link_to upcoming_event.name , upcoming_event%></td>
      <td><%= upcoming_event.description%></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h4>Your Organizations</h4>
<table>
  <thead>
  <tr>
    <th>Organization</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user_organizations.each do |organization| %>
    <tr>
      <td><%=  link_to organization.name , organization%></td>
      <td><%=  organization.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>