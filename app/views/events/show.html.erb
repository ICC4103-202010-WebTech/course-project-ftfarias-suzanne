<p id="notice"><%= notice %></p>

<div class="container emp-profile">
  <form method="post">
    <div class="row">
      <div class="col-md-4">
        <div class="profile-img">
          <%=image_tag("teemologo.jpg",:alt => "teemo", height: "150px") %></i>
        </div>
      </div>
      <div class="col-md-6">
        <div class="profile-head">
          <h4>
            <%= @event.name%>
          </h4>
          <h6>
            <i class="fas fa-location-arrow mr-1 fa-lg"> </i> <%= @event.location %>
          </h6>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Description</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Event Guests</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="profile" aria-selected="false">Comments</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-2">
        <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Event"/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-8">
        <div class="tab-content profile-tab" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
              <div class="col-md-6">
                <p><%= @event.description %></p>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="row">
              <% @event.event_guests.each do |guest| %>
                <div class="col-md-10">
                  <p> <%= guest.user.user_profile.username  %></p>
                </div>
              <% end %>
            </div>
          </div>
          <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="profile-tab">
            <div class="row">
              <% @event_comments.each do |comment| %>
                <% @replies = comment.replies %>
                <div class="col-md-10">
                  <div class="container">
                    <div class="card">
                      <div class="card-body">
                        <div class="row">
                          <div class="col-md-2">
                            <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
                          </div>
                          <div class="col-md-10">
                            <p><u><%= comment.event_guest.user.user_profile.username%></u></p>
                            <div class="clearfix"></div>
                            <p><%= comment.message %></p>
                            <p class="text-secondary text-center small"><%= comment.created_at %></p>
                            <p>
                              <a class="float-right btn btn-outline-primary ml-2"> <i class="fa fa-reply"></i> Reply</a>
                            </p>
                          </div>
                        </div>
                        <% @replies.each do |reply| %>
                          <div class="card card-inner">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-md-2">
                                  <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
                                </div>
                                <div class="col-md-10">
                                  <p><u><%= reply.event_guest.user.user_profile.username%></u></p>
                                  <p><%= reply.message %></p>
                                  <p class="text-secondary text-center small"><%= reply.created_at %></p>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>