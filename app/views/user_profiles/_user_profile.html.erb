<div class="card page-background mx-auto w-50 mt-2 mb-2">
  <h3> <i class="fas fa-user-circle mr-2"></i><%= link_to user_profile.username, user_profile, class: "text-info" %></h3>
  <% if user_profile.user.event_creator != nil%>

    <p>This user has created the following events: </p>
  <% user_profile.user.event_creator.events.each do |event|%>
  <h6><%= link_to event.name , event, class: "text-info"%></h6>
  <% end %>

    <%else %>
    <p>This user hasn't created any events </p>
    <%end %>
</div>