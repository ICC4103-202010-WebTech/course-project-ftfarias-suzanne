<p id="notice"><%= notice %></p>

<div class="container emp-profile">
  <form method="post">
    <div  id=profile_row class="row m-0 p-0">
      <div class="col-md-4 ml-0">
        <div class="profile-img ">
<!--          CAMBIAR-->
          <img <%= image_tag("teemologo.jpg", height: "150px")%>
        </div>
      </div>
      <div class="col-md-4">
        <div class="profile-head">
          <h4>
            <%= @user_profile.name%> <%=@user_profile.lastname%>
          </h4>
          <div>
            <h6>
              <i class="fas fa-info-circle"> </i>
              <%= @user_profile.bio %>
            </h6>
          </div>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="events-tab" data-toggle="tab" href="#events" role="tab" aria-controls="events" aria-selected="false">Events</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="organizations-tab" data-toggle="tab" href="#organizations" role="tab" aria-controls="organizations" aria-selected="false">Organizations</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-2">
        <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 pt-4 ml-3">
        <div class="profile-work">
          aa
        </div>
      </div>

      <div class="col-md-7">
        <div class="tab-content profile-tab" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
              <div class="col-md-3">
                <label>Username</label>
              </div>
              <div class="col-md-6">
                <p><%=@user_profile.username %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label>Full Name</label>
              </div>
              <div class="col-md-6">
                <p><%= @user_profile.name %> <%=@user_profile.lastname %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label>Email</label>
              </div>
              <div class="col-md-6">
                <p><%= @user_profile.user.email %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label>Phone</label>
              </div>
              <div class="col-md-6">
                <p><%= @user_profile.phone %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label>Address</label>
              </div>
              <div class="col-md-6">
                <p><%= @user_profile.address %></p>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="events" role="tabpanel" aria-labelledby="events-tab">
            <% @user_events.each do |event| %>
              <div class="row">
                <div class="col-md-3">
                  <label><%= event.name%></label>
                </div>
                <div class="col-md-6">
                  <p><%= link_to "See event", event %></p>
                </div>
              </div>
            <% end %>
          </div>

          <div class="tab-pane fade" id="organizations" role="tabpanel" aria-labelledby="organizations-tab">
            <% @user_organizations.each do |organization| %>
              <div class="row">
                <div class="col-md-3">
                  <label><%=organization.name%></label>
                </div>
                <div class="col-md-6">
                  <p><%= link_to "See organization" , organization %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>